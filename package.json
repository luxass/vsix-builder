{
  "name": "vsix-builder",
  "type": "module",
  "version": "0.0.1",
  "description": "A programmatic way to create VSIX files for Visual Studio Code extensions.",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.12.1",
  "license": "MIT",
  "homepage": "https://github.com/luxass/vsix-builder",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/vsix-builder.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/vsix-builder/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ignore": "^7.0.0",
    "package-manager-detector": "^0.2.8",
    "semver": "^7.6.3",
    "tinyglobby": "^0.2.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/node": "20.16.11",
    "@types/semver": "^7.5.8",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "vitest-testdirs": "^1.4.0"
  }
}
